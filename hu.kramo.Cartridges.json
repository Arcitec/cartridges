{
    "app-id" : "hu.kramo.Cartridges",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "cartridges",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd",
        "--filesystem=~/.steam/steam/:ro",
        "--filesystem=xdg-config/heroic/:ro",
        "--filesystem=xdg-data/bottles/:ro",
        "--filesystem=~/.var/app/com.valvesoftware.Steam/data/Steam/:ro",
        "--filesystem=~/.var/app/com.heroicgameslauncher.hgl/config/heroic/:ro",
        "--filesystem=~/.var/app/com.usebottles.bottles/data/bottles/:ro"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "python3-modules.json",
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                "type": "git",
                "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                "tag": "v0.6.0"
                }
            ]
        },
        {
            "name" : "cartridges",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}
